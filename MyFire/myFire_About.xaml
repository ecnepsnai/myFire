            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" ShadowDepth="2" RenderingBias="Quality" />
            </TextBlock.Effect>
        </TextBlock>
        <Button Style="{DynamicResource Button_Default}" Content="Follow Us!" Height="27" HorizontalAlignment="Left" Margin="164,202,0,0" Name="Button1" VerticalAlignment="Top" Width="75" />
        <Button Style="{DynamicResource Button_Default}" Content="Promote Us!" Height="27" HorizontalAlignment="Left" Margin="244,202,0,0" Name="Button2" VerticalAlignment="Top" Width="75" />
        <Button Style="{DynamicResource Button_Green}" Content="Donate!" Height="27" HorizontalAlignment="Left" Margin="325,202,0,0" Name="Button3" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
