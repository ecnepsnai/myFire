        <Grid.Background>
            <ImageBrush ImageSource="/MyFire;component/Images/about_bg.jpg" Stretch="None" TileMode="None" />
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="164,12,0,0" Name="AppNameVersion" Text="myFire, #.#" VerticalAlignment="Top" FontSize="32" Foreground="White">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" ShadowDepth="3" RenderingBias="Quality" />
            </TextBlock.Effect>
        </TextBlock>
        <TextBlock FontSize="15" HorizontalAlignment="Left" Margin="164,61,0,0" Name="TextBlock2" Text="Created by Ian Spence." VerticalAlignment="Top" Foreground="White">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="0" ShadowDepth="2.5" RenderingBias="Quality" />
            </TextBlock.Effect>
        </TextBlock>
