<Window x:Class="MessageWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="myFire" Icon="/MyFire;component/Images/information.png" Name="MessageWindow" WindowStartupLocation="CenterScreen" MinWidth="350" MaxWidth="350" ResizeMode="NoResize" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Image Height="32" Width="32" Margin="5" Source="/MyFire;component/Images/info-help.png" />
                <StackPanel MaxWidth="275" >
                    <TextBlock Name="tb_title" Text="Title" VerticalAlignment="Top" FontStyle="Italic" Foreground="DarkBlue" FontSize="15" />
                    <TextBlock Name="l_errormessage" Text="Messgae" TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
            <Rectangle Height="1" HorizontalAlignment="Stretch" Fill="Gray" />
            <Grid Background="#FFEFEFEF">
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Content="OK" Height="23" Name="OK" Width="75" Margin="2.5,5,5,5" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
