<Window x:Class="myFire_EditList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="myFire_EditList" Height="300" Width="350" Icon="/MyFire;component/Resources/Retro-Fire-Ball.ico">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="12,12,0,0" Name="TextBlock1" Text="List Name:" VerticalAlignment="Top" Width="59" TextAlignment="Right" />
        <TextBlock HorizontalAlignment="Left" Margin="12,43,0,0" Name="TextBlock2" Text="Public:" VerticalAlignment="Top" Width="59" TextAlignment="Right" />
        <TextBlock HorizontalAlignment="Left" Margin="12,70,0,0" Name="TextBlock3" Text="Description (Optional):" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="77,9,12,0" Name="ListName" VerticalAlignment="Top" />
        <TextBox Height="128" Margin="12,92,12,0" Name="ListDescription" VerticalAlignment="Top" />
        <Button Content="Save List" Height="23" HorizontalAlignment="Right" Margin="0,0,12,9" Name="SaveButton" VerticalAlignment="Bottom" Width="75" />
        <CheckBox Content="(Public lists can be followed by anybody)" Height="16" HorizontalAlignment="Left" Margin="77,44,0,0" Name="PublicList" VerticalAlignment="Top" />
    </Grid>
</Window>
